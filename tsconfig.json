{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",

    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "api"],
  "exclude": ["node_modules", "dist"]
}
